{
    "name": "sigmasoft/datatable-bundle",
    "type": "symfony-bundle",
    "description": "Un bundle Symfony moderne et puissant pour créer des tables de données interactives avec édition inline, export et fonctionnalités avancées",
    "keywords": ["symfony", "datatable", "crud", "table", "inline-editing", "export", "pagination", "search", "bundle"],
    "homepage": "https://github.com/sigmasoft-solution/datatable-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Gédéon MAKELA",
            "email": "g.makela@sigmasoft-solution.com",
            "homepage": "https://sigmasoft-solution.com",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "support@sigmasoft-solution.com",
        "issues": "https://github.com/Chancel18/SigmasoftDataTableBundle/issues",
        "source": "https://github.com/Chancel18/SigmasoftDataTableBundle",
        "docs": "https://chancel18.github.io/SigmasoftDataTableBundle/"
    },
    "require": {
        "php": ">=8.1",
        "symfony/framework-bundle": "^6.4|^7.0",
        "symfony/twig-bundle": "^6.4|^7.0",
        "symfony/ux-live-component": "^2.0",
        "symfony/ux-twig-component": "^2.0",
        "symfony/form": "^6.4|^7.0",
        "symfony/validator": "^6.4|^7.0",
        "symfony/security-bundle": "^6.4|^7.0",
        "symfony/routing": "^6.4|^7.0",
        "doctrine/orm": "^2.15|^3.0",
        "doctrine/doctrine-bundle": "^2.10",
        "knplabs/knp-paginator-bundle": "^6.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "symfony/phpunit-bridge": "^6.4|^7.0",
        "symfony/test-pack": "^1.0",
        "symfony/browser-kit": "^6.4|^7.0",
        "symfony/css-selector": "^6.4|^7.0",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "fakerphp/faker": "^1.21",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-symfony": "^1.3",
        "symfony/maker-bundle": "^1.50"
    },
    "autoload": {
        "psr-4": {
            "Sigmasoft\\DataTableBundle\\": "src/SigmasoftDataTableBundle/"
        },
        "files": [
            "src/SigmasoftDataTableBundle/SigmasoftDataTableBundle.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Sigmasoft\\DataTableBundle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.4.*"
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}